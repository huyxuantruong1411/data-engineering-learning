MONGO_URI=mongodb://localhost:27017/
MONGO_DB=manga_raw_data

# Số worker (thread) để fetch song song
WORKERS=6

# Giới hạn phân trang khi crawl (để không bị quá lâu)
AP_MAX_PAGES_REVIEWS=2
AP_MAX_PAGES_RECS=2
MU_MAX_PAGES_COMMENTS=2

# Throttle tối thiểu giữa 2 request cùng host (giây)
MIN_HOST_INTERVAL=0.8

# Timeout mỗi request (giây)
HTTP_TIMEOUT=30